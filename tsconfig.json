{
  "compilerOptions": {
    "pretty": true,
    "newLine": "LF",
    "target": "esnext",
    "module": "commonjs",
    "baseUrl": ".",
    "paths": {
      "~/*": [
        "src/*"
      ]

    },
    "skipLibCheck":true,
    "downlevelIteration":false,
    "moduleResolution": "node",
    "jsx": "react",
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "sourceMap": true,
    "noImplicitAny": false

  },
  "exclude": [
    "BundleStats",
    "*_deprecated.ts",
    "node_modules",
    "dist"
  ],
  "types": [
    "src/typings"
  ]

}
